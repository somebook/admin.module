%h1= t("admin.shard.listing")

= render partial: "shared/flash_messages"

= link_to t("admin.shard.new"), new_shard_path, class: %w[ btn ]
%br
%br

%table.table.table-striped
  %tr
    %th= Shard.model_name.human
    %th= t("global.actions")

  - @shards.each do |shard|
    %tr
      %td{ class: "name" }
        = shard.name
      %td{ class: "operations"}
        = link_to t("admin.shard.users"), shard_shard_users_path(shard), class: %w[ btn btn-small ]
        = link_to t("admin.shard.languages"), shard_shard_languages_path(shard), class: %w[ btn btn-small ]
        = link_to t("global.edit"), edit_shard_path(shard), class: %w[ btn btn-small ]
        = link_to t("global.destroy"), shard,
          data: { confirm: t("global.delete_confirm") },
          method: :delete,
          class: %w[ btn btn-small btn-danger ]
